<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:dsa_battle_tracker.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
        x:Class="dsa_battle_tracker.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Width="600"
        Height="800"
        Title="DSA Stattracker"
        Name="Main"
        >

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <TabControl>
    <TabItem Header="Stattracker" Name="Stattracker">
    <!--CONTENT-->
    <Grid RowDefinitions="0.1*,*,0.1*" HorizontalAlignment="Stretch">
        <Grid.Styles>
            <Style Selector=":is(ContentControl)">
                <Setter Property="HorizontalAlignment" Value="Stretch" />
            </Style>
        </Grid.Styles>
    
        <!--Menüband-->
        <Border Padding="6">
            <DockPanel>
                <Menu DockPanel.Dock="Left">
                    <Menu.Styles>
                        <Style Selector="MenuItem">
                            <Setter Property="FontSize" Value="15" />
                        </Style>
                    </Menu.Styles>
                    <MenuItem Header="☰" FontSize="28" VerticalAlignment="Stretch" >
                        <MenuItem Header="Sortieren (INI)" Command="{Binding INISort}" />
                        <MenuItem Header="Sortieren (Alphabetisch)" Command="{Binding AlphaSort}" />
                        <Separator />
                        <MenuItem Header="Liste speichern..." Command="{Binding SaveList}" />
                        <MenuItem Header="Liste laden..." Command="{Binding LoadList}" />
                    </MenuItem>
                </Menu>
            </DockPanel>
        </Border>
        
        <!--Charaktere-->
        <ListBox Grid.Row="1" ItemsSource="{Binding Chars}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <!--TODO: Expander flashen, wenn man die Tasten an den Zahlen drückt-->
                    <Expander>
                        <Expander.Header>
                            <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto">
                                <Grid.Styles>
                                    <Style Selector="Label">
                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                    </Style>
                                    <Style Selector="NumericUpDown TextBox">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </Grid.Styles>

                                <Label Content="{Binding Name}" />
                                <Label Content="INI:" Grid.Column="1" />
                                <NumericUpDown Value="{Binding Ini}" ShowButtonSpinner="False" Grid.Column="2" />
                                <Label Content="INI Basis:" Grid.Column="3" />
                                <NumericUpDown Value="{Binding IniBase}" ShowButtonSpinner="False" Grid.Column="4" />
                            </Grid>
                        </Expander.Header>
                        <Expander.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Speichern"
                                    Command="{Binding #Main.DataContext.QuickSaveChar}"
                                    CommandParameter="{Binding}"
                                    />
                                <MenuItem Header="Speichern unter..."
                                    Command="{Binding #Main.DataContext.SaveChar}"
                                    CommandParameter="{Binding}"
                                    />
                                <MenuItem Header="Entfernen"
                                    Command="{Binding #Main.DataContext.RemoveChar}"
                                    CommandParameter="{Binding}"
                                    />
                            </ContextMenu>
                        </Expander.ContextMenu>
                        <StackPanel>
                            <TextBox Text="{Binding Name, Mode=TwoWay}" />
                            <UniformGrid Name="Stats" Columns="3">
                                <UniformGrid.Styles>
                                    <Style Selector="NumericUpDown">
                                        <!--TODO-->
                                        <Setter Property="ParsingNumberStyle" Value="Integer" />
                                        <Setter Property="FormatString" Value="0" />
                                        <Setter Property="Minimum" Value="0" />
                                    </Style>
                                    <!--
                                    <Style Selector="Label">
                                        <Setter Property="HorizontalContentAlignment" Value="Right" />
                                    </Style>
                                    -->
                                </UniformGrid.Styles>

                                <Label Content="LE:" />
                                    <NumericUpDown Value="{Binding LE, Mode=TwoWay}" Minimum="-9999" />
                                    <NumericUpDown Value="{Binding MaxLE, Mode=TwoWay}" />
                                <Label Content="AU:" />
                                    <NumericUpDown Value="{Binding AU, Mode=TwoWay}" />
                                    <NumericUpDown Value="{Binding MaxAU, Mode=TwoWay}" />
                                <Label Content="AE:" />
                                    <NumericUpDown Value="{Binding AE, Mode=TwoWay}" />
                                    <NumericUpDown Value="{Binding MaxAE, Mode=TwoWay}" />
                                <Label Content="KE:" />
                                    <NumericUpDown Value="{Binding KE, Mode=TwoWay}" />
                                    <NumericUpDown Value="{Binding MaxKE, Mode=TwoWay}" />
                                <!--TODO: INI-->
                            </UniformGrid>
                        </StackPanel>
                    </Expander>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!--Buttons Laden/Neu eingeben-->
        <UniformGrid Grid.Row="2" Columns="2">
            <UniformGrid.Styles>
                <Style Selector="Button">
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Setter Property="VerticalAlignment" Value="Stretch" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                </Style>
            </UniformGrid.Styles>

            <Button Content="{Binding LoadButtonContent}" Command="{Binding LoadCharacter}" />
            <Button Content="{Binding NewButtonContent}" Command="{Binding NewCharacter}" />
        </UniformGrid>
    </Grid>
    </TabItem>

    <TabItem Header="{Binding CounterTab}" Name="{Binding CounterTab}">
        <StackPanel>
            <ListBox ItemsSource="{Binding Players}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto">
                            <TextBox Text="{Binding Name, Mode=TwoWay}" />
                            <Label Content="Einsen:" Grid.Column="1" />
                            <NumericUpDown Value="{Binding Einsen, Mode=TwoWay}" Minimum="0" ParsingNumberStyle="Integer" FormatString="0" Grid.Column="2" />
                            <Label Content="Zwanzigen:" Grid.Column="3" />
                            <NumericUpDown Value="{Binding Zwanzigen, Mode=TwoWay}" Minimum="0" ParsingNumberStyle="Integer" FormatString="0" Grid.Column="4" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <UniformGrid Columns="3">
                <Button Content="Speichern" Command="{Binding SavePlayers}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                <Button Content="+" Command="{Binding AddPlayer}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                <Button Content="Laden" Command="{Binding LoadPlayers}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
            </UniformGrid>
        </StackPanel>
    </TabItem>
    </TabControl>

</Window>
